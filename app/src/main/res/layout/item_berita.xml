<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="115dp"
    android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="@dimen/activity_margin"
            android:background="@drawable/shadow">

            <ImageView
                android:id="@+id/imgBerita"
                android:layout_width="70dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/lblJudulBerita"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:text="title"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblIsiBerita"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblJudulBerita"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:text="isi"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblIsiBerita"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/lbltanggalBerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:drawableLeft="@drawable/baseline_event_6"
                    android:drawableTint="@color/colorPrimary"
                    android:text="14-08-2018 11:56 am"
                    android:textSize="6sp" />

                <TextView
                    android:id="@+id/lblLikeBerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="160dp"
                    android:layout_marginStart="160dp"
                    android:drawableLeft="@drawable/baseline_favorite_6"
                    android:drawableTint="@color/colorPrimary"
                    android:text="117"
                    android:textSize="6sp" />

                <TextView
                    android:id="@+id/lblViewBerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="180dp"
                    android:layout_marginStart="180dp"
                    android:drawableLeft="@drawable/baseline_person_6"
                    android:drawableTint="@color/colorPrimary"
                    android:text="711"
                    android:textSize="6sp" />
            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>