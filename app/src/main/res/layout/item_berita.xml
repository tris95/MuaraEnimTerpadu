<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgBerita"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/lblJudulBerita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imgBerita"
            android:textSize="16sp"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/imgBerita"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/lblIsiBerita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textSize="14sp"
            android:layout_below="@+id/lblJudulBerita"
            android:layout_toRightOf="@+id/imgBerita"
            android:layout_toEndOf="@+id/imgBerita"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblIsiBerita"
            android:layout_toRightOf="@+id/imgBerita"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_toEndOf="@+id/imgBerita">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/baseline_event_6"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:id="@+id/lbltanggalBerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:ignore="UnusedAttribute" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/baseline_favorite_6"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center"
                tools:ignore="UnusedAttribute"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/lblLikeBerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:ignore="SmallSp,UnusedAttribute" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/baseline_person_6"
                android:backgroundTint="@color/colorPrimary"
                android:layout_gravity="center"
                tools:ignore="UnusedAttribute"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/lblViewBerita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                tools:ignore="SmallSp,UnusedAttribute" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>