<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:paddingTop="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin">

            <ImageView
                android:id="@+id/imgBerita"
                android:layout_width="70dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/lblJudulBerita"
                android:layout_width="wrap_content"
                android:layout_height="24sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:text="title"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblIsiBerita"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textSize="12sp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/lblJudulBerita"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:text="isi" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:layout_below="@+id/lblIsiBerita">

                <TextView
                    android:id="@+id/lbltanggalBerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_marginLeft="80dp"
                    android:layout_marginStart="80dp"
                    android:text="14-08-2018 11:56 am"
                    android:drawableLeft="@drawable/baseline_event_24"
                    android:textSize="6sp" />

                <TextView
                    android:id="@+id/lblLikeBerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableTint="@color/colorPrimary"
                    android:layout_marginLeft="160dp"
                    android:layout_marginStart="160dp"
                    android:drawableLeft="@drawable/baseline_favorite_24"
                    android:text="117"
                    android:textSize="6sp" />

                <TextView
                    android:id="@+id/lblViewBerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:drawableTint="@color/colorPrimary"
                    android:drawableLeft="@drawable/baseline_person_24"
                    android:layout_marginLeft="180dp"
                    android:layout_marginStart="180dp"
                    android:text="711"
                    android:textSize="6sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>