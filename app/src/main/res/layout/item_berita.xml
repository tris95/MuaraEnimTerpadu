<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="100dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:text="title"
                android:id="@+id/lblJudulBerita"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:text="isi"
                android:id="@+id/lblIsiBerita"
                android:layout_below="@+id/lblJudulBerita"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:text="14-08-2018 11:56 am"
                android:id="@+id/lbltanggalBerita"
                android:layout_below="@+id/lblIsiBerita"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:text="117"
                android:id="@+id/lblLikeBerita"
                android:layout_below="@+id/lbltanggalBerita"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="90dp"
                android:text="711"
                android:id="@+id/lblViewBerita"
                android:layout_below="@+id/lblLikeBerita"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="90dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>