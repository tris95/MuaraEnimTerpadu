<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_margin"
        tools:context=".fragments.KirimLaporanFragment">

        <TextView
            android:id="@+id/lblTujuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Organisasi Perangkat Daerah Tujuan"/>

        <Spinner
            android:id="@+id/spOpd"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"/>

        <TextView
            android:id="@+id/lblJudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Judul Laporan" />

        <EditText
            android:id="@+id/txtJudul"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:inputType="textAutoComplete"
            android:hint="Judul laporan Anda"
            android:padding="7dp"/>

        <TextView
            android:id="@+id/lblIsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Isi Laporan" />

        <EditText
            android:id="@+id/txtIsi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button"
            android:padding="7dp"
            android:minLines="5"
            android:inputType="textAutoComplete"
            android:hint="Isi laporan Anda"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="start" />

        <TextView
            android:id="@+id/lblnotlp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="No. Hp" />

        <EditText
            android:id="@+id/txtNoHp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button"
            android:padding="7dp"
            android:inputType="number"
            android:hint="No. Hp yang dapat dihubungi"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="start"
            android:drawableRight="@drawable/baseline_edit_24"
            android:drawableEnd="@drawable/baseline_edit_24" />

        <TextView
            android:id="@+id/lblLokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Lokasi" />

        <EditText
            android:id="@+id/txtLokasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/custom_button"
            android:padding="7dp"
            android:minLines="2"
            android:inputType="textAutoComplete"
            android:hint="Detail lokasi pengaduan (optional)"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="start" />

        <!--<ImageView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="250dp"-->
            <!--android:id="@+id/imgLaporan"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/jalan"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:layout_marginRight="5dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/activity_margin"
            android:text="Foto Laporan" />

        <com.github.siyamed.shapeimageview.CircularImageView
            android:id="@+id/imgLaporan"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@drawable/add_image"/>

        <Button
            android:id="@+id/btnKirim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_background"
            android:text="Kirim"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>