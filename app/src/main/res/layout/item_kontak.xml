<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/lblJudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/lblTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblJudul"
                android:drawableLeft="@drawable/baseline_event_24"
                android:text="1 September 2018" />

            <TextView
                android:id="@+id/lblTanggapan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="150dp"
                android:drawableLeft="@drawable/baseline_label_24"
                android:layout_below="@+id/lblJudul"
                android:text="Sudah Ditanggapi"
                android:layout_marginLeft="90dp"
                android:layout_alignParentLeft="true" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorAccent"
                android:layout_below="@id/lblTanggal"/>
            <TextView
                android:id="@+id/lblIsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lblTanggal"
                android:paddingTop="10dp"
                android:text="isi" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>